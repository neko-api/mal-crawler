{
    "name": "neko-api/mal-crawler",
    "type": "library",
    "description": "NekoAPI MalCrawler Component",
    "keywords": ["mal-crawler", "neko-api"],
    "homepage": "https://github.com/neko-api/mal-crawler",
    "license": "MIT",
    "authors": [
        {
            "name": "Aurimas Niekis",
            "email": "aurimas@niekis.lt"
        }
    ],
    "require": {
        "php": ">=7.1",
        "fabpot/goutte": "^3.2",
        "neko-api/entity": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0"
    },
    "autoload": {
        "psr-4": { "NekoAPI\\Component\\MalCrawler\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "NekoAPI\\Component\\MalCrawler\\Test\\": "tests" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit -c phpunit.xml.ci"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
